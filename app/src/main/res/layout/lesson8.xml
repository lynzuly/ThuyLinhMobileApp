<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    tools:context=".lesson.Practice8">

    <TextView
        android:id="@+id/TextView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explicit Intent Example:"
        android:textSize="20dp" />

    <Button
        android:id="@+id/BtnOpenPractice6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW PRACTICE 6"
        android:layout_marginTop="10dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/TextView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other Implicit Intent Examples:"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/textSearchWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:layout_gravity="bottom"
            android:hint="Search" />

        <Button
            android:id="@+id/btnSearchWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="bottom"
            android:text="SEARCH WEB" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Broadcast Receiver Example:"
        android:textSize="20dp" />

    <Switch
        android:id="@+id/registerReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Receiver"
        android:textSize="16dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/textBroadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:hint="Broadcast message" />

        <Button
            android:id="@+id/btnSendBroadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:text="SEND TO BROADCAST" />
    </LinearLayout>

</LinearLayout>